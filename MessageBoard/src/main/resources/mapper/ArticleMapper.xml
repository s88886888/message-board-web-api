<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.ArticleMapper">


    <insert id="AddArticle">

        insert into article(articlename,
                            `time`,
                            author,
                            authorid,
                            text,
                            Image,
                            likecount)
            value (#{articlename},
            #{time},
            #{author},
            #{authorid},
            #{text},
            #{Image},
            #{likecount}
            )


    </insert>
    <update id="updateArticle">
        update article
        set articlename=#{articlename},
        text=#{text},
        Image=#{Image}
        <where>id=#{id}</where>

    </update>
    <delete id="delectByid">
        delete FROM article
        <where>id=#{id}</where>
    </delete>
    <select id="selectALL" resultType="model.Article">
        select *
        from article
    </select>
    <select id="selectByid" resultType="model.Article">
        select * from article
        <where>id=#{id}</where>
    </select>
    <select id="SelectarticlenameOrauthor" resultType="model.Article">

        select * FROM article
        <where>
            <if test="author =='' ||author==null">
                and articlename like "%" #{articlename} "%";
            </if>

            <if test="articlename =='' || articlename==null">
                and author like "%" #{author} "%";
            </if>
            author like "%" #{author} "%" and articlename like "%" #{articlename} "%";
        </where>
    </select>
    <select id="Selectarticlebyauthor" resultType="model.Article">
        select * from article
        <where>author=#{author}</where>
    </select>
</mapper>